.tabcordion.is-tabs(aria-multiselectable='false')
  ul.tabcordion_navlist(role='tablist')
    li.tabcordion_nav-item.is-active(role='presentation')
      button#ex-label-1.tabcordion_nav-trigger(role='tab', aria-setsize='3', aria-posinset='1', tabindex='0', aria-controls='ex-panel-1', aria-selected='true') Foo
    li.tabcordion_nav-item(role='presentation')
      button#ex-label-2.tabcordion_nav-trigger(role='tab', aria-setsize='3', aria-posinset='2', tabindex='-1', aria-controls='ex-panel-2', aria-selected='false') Bar
    li.tabcordion_nav-item(role='presentation')
      button#ex-label-3.tabcordion_nav-trigger(role='tab', aria-setsize='3', aria-posinset='3', tabindex='-1', aria-controls='ex-panel-3', aria-selected='false') Baz
  .tabcordion_panels
    #ex-panel-1.tabcordion_panel.is-current(role='tabpanel', aria-labelledby='ex-label-1', tabindex='-1')
      h3 Foo
      .panel-body
        .field
          label Foo Email
            input(type='text')
        .field
          label Foo Phone
            input(type='text')
        button(type='button') Submit
    #ex-panel-2.tabcordion_panel(aria-hidden='true', role='tabpanel', aria-labelledby='ex-label-2', tabindex='-1')
      h3 Bar
      .panel-body
        .field
          label Bar Email
            input(type='text')
        .field
          label Bar Phone
            input(type='text')
        button(type='button') Submit
    #ex-panel-3.tabcordion_panel(aria-hidden='true', role='tabpanel', aria-labelledby='ex-label-3', tabindex='-1')
      h3 Baz
      .panel-body
        .field
          label Baz Email
            input(type='text')
        .field
          label Baz Phone
            input(type='text')
        button(type='button') Submit
