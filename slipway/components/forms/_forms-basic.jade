form
  .form-group
    input#basic-fname(type='text')
    label(for='basic-fname') First Name
  .form-group
    input#basic-email(type='email')
    label(for='basic-email') Email Address
  .form-group
    input#basic-tel(type='tel')
    label(for='basic-tel') Phone Number
  .form-group
    input#basic-password(type='password')
    label(for='basic-password') Password
  .form-group
    select#basic-select
      option(value='', disabled=true, selected=true, hidden=true) Select a collection
      option Biblioteca
      option Marcel
      option Pierce
    label(for='basic-select') Collection
  fieldset
    legend Collection
    ul.radio-group
      li
        input#basic-radio-1(type='radio', checked=true, value='biblioteca', name='basic-radio-group')
        label(for='basic-radio-1') Biblioteca
      li
        input#basic-radio-2(type='radio', value='marcel', name='basic-radio-group')
        label(for='basic-radio-2') Marcel
      li
        input#basic-radio-3(type='radio', value='pierce', name='basic-radio-group')
        label(for='basic-radio-3') Pierce
  fieldset
    legend Collection
    ul.checkbox-group
      li
        input#basic-check-1(type='checkbox', checked=true, value='biblioteca', name='basic-check-group')
        label(for='basic-check-1') Biblioteca
      li
        input#basic-check-2(type='checkbox', value='marcel', name='basic-check-group')
        label(for='basic-check-2') Marcel
      li
        input#basic-check-3(type='checkbox', value='pierce', name='basic-check-group')
        label(for='basic-check-3') Pierce
