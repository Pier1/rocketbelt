// Ratio between image & content changed via CSS. Target the max-width of the `.card-image_horizontal .card-image_image` selector.

.card.card-image.card-image-thumbnail.z-depth-1
  each alt in ['2443389_1']
    - var base = 'https://images.pier1.com/dis/dw/image/v2/AAID_PRD/on/demandware.static/-/Sites-pier1_master/default/images/';
    - var short = alt.substring(0, alt.indexOf('_'));
    .card-image_image.lazyload-wrapper(data-src-lg=base + short + '/' + alt + '.jpg?sw=400&sh=400', style='max-width: 15%')
      img.lazyload-small(src=base + short + '/' + alt + '.jpg?sw=10&sh=10')
      .lazyload-pad(style='padding-bottom: 100%')
  .card-content
    .card-title Thumbnail Cards
    .card-body Customize the ratio of the image &amp; content widths by overriding the #[code max-width] of the #[code .card-image_horizontal .card-image_image] selector.
