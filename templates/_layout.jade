include _mixins

- var prepend = buildPath ? buildPath : '../..';

doctype html
html(lang='en')
  head
    block vars
    block title
     title #{title ? title + ' | ' : ''}Rocketbelt Pattern Library
    block styles
      link(rel='stylesheet', href=prepend + '/css/site.min.css')
  body.grid-fluid
    #docs-wrapper.row
      nav#docs-leftnav.nav.col.xs-12.md-3.xl-2
        a.rb-header.grid-fluid(href='/')
          .row.xs-middle
            .col.xs-2.sm-1.md-8.rb-logo.rb-logo-belt
              include /assets/rocketbelt.svg
            .col.xs-10.sm-4.md-12.rb-logo.rb-logo-uri
              include /assets/rocketbelt-uri.svg
        block sidebar
          +buildNav(nav, prepend)
      #docs-content.pad-5.col.xs
        block main
          main.grid-fluid.no-margin
            .row
              .col.xs
                block content

    script(src='https://code.jquery.com/jquery-2.2.4.min.js') 
    script(src=prepend + '/js/playground.jquery.js')      
    script(src=prepend + '/js/site.js')
    script(src='/base/feature-detection/rocketbelt.feature-detection.min.js')
    
    script(src=prepend + '/js/prism.js')
    script(src=prepend + '/js/clipboard.min.js')
    
    include /base/layout/_rocketbelt.flexibility.jade
    include _analytics
    block scripts