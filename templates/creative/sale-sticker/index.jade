extends /_layout.jade

block vars
  - var title = 'Sale Sticker'

block content
  article
    :md
      # Sale Sticker

    .grid-fluid.playground
      .row
        .col.xs-12.md-6.ss_util_background
          +exampleWithCode
            include _sale-sticker
        .col.xs-12.md-6
          div.playground-control
            input#ss_style.playground-item(
              type="checkbox"
              checked=true
              value="serif"
              name="Serif"
              data-property="class"
              data-target=".sale-sticker-wrapper"
            )
            label(for="ss_style") Toggle Serif
          div.playground-control
            label(for="ss_fsize") Font Size:
              input#ss_fsize.playground-item( 
                type="range"  
                value="7"
                min="4" 
                max="12" 
                step=".25"
                data-target=".sale-sticker-inner" 
                data-property="font-size"
                data-units="rem"
              ) 
              span.playground-range-value 7rem
          div.playground-control
            label(for="ss_topmsg") Top Message:
              input#ss_topmsg.playground-item(
                data-target=".up-to-msg"
                type="text"
                maxlength="20"
                value = "up to"
              )
          div.playground-control
            label(for="ss_sale") Sale Amount:
              input#ss_sale.playground-item(
                data-target=".sale-amount"
                type="text"
                maxlength="2"
                value = "20"
              )
          div.playground-control
            label(for="ss_tagline") Tagline:
              input#ss_tagline.playground-item(
                data-target=".tagline"
                type="text"
                maxlength="23"
                value = "All Sofas"
              )

block scripts 
  script.
    rb.launchPlayground();



